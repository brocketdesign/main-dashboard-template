extends ../dashboard

block dynamicContent
    .row
        each data in scrapedData.reverse()
            .col-md-4.mb-4
                .card.card-clickable(data-id=data.video_id, data-isdl=(data.filePath?"true":"false"))
                    img.card-img-top(src=data.imageUrl, alt=data.alt, style='object-fit: cover;')
                    .card-body
                        .d-flex.justify-content-between
                            .download-button(data-id=data.video_id, style="display:none")
                                i.fas.fa-download
                            a(target="_blank" href=data.source)
                                i.fas.fa-link
                            .info-button(data-id=data.url)
                                i.fas.fa-info
                        p.card-title(style="display:none")= data.alt
