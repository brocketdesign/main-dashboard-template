extends ../dashboard

block dynamicContent
  .masonry-container.row
    each data in scrapedData.reverse()
      .col-md-4.mb-4.masonry-item
        .card(class=`card-clickable-${mode}` data-id=data._id)
          img.card-img-top-3(src=data.url, alt=data.title, )
          .card-body
            .d-flex.justify-content-between
              .download-button(data-id=data.url)
                i.fas.fa-download
              a(target="_blank" href=data.source)
                i.fas.fa-link
              .info-button(data-id=data.url)
                i.fas.fa-info
            p.card-title(style="display:none")= data.title