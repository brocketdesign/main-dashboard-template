extends dashboard-base

block mainContent
    h2.fw-bold ホーム
    hr.my-4
    section.my-5
        h5.fw-bold おすすめ
        .row.row-cols-1.row-cols-md-3.mt-4
            .col.mb-3
                a.card.btn.bg-white.px-2(href="/dashboard/app/1/history/")
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-video.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | ビデオ
                            p.card-text.text-start.text-muted
                            
            .col.mb-3
                a.card.btn.bg-white.px-2(href="/dashboard/app/3/history")
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-image.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | 画像(GIF)
                            p.card-text.text-start.text-muted
                                | 
                            
            .col.mb-3
                a.card.btn.bg-white.px-2(href="/dashboard/app/8/history")
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-image.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | 画像(GIF)2
                            p.card-text.text-start.text-muted
                                | 
                            
            .col.mb-3
                a.card.btn.bg-white.px-2(href="/dashboard/app/7/history")
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-image.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | 画像
                            p.card-text.text-start.text-muted
                                | 

            .col.mb-3
                a.card.btn.bg-white.px-2(href="/dashboard/app/2")
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-comments.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                | Reddit
                            p.card-text.text-start.text-muted
                                | 
            .col.mb-3
                a.card.btn.bg-white.px-2(href="/dashboard/app/5")
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fab.fa-twitter.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                |  ツイッター動画 
                            p.card-text.text-start.text-muted
                                | 
            .col.mb-3
                a.card.btn.bg-white.px-2(href="/dashboard/app/6")
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-play.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                |  Twitter動画保存 
                            p.card-text.text-start.text-muted
                                | 
            .col.mb-3
                a.card.btn.bg-white.px-2(href="/dashboard/app/actresses")
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-female.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                |  女優リスト 
                            p.card-text.text-start.text-muted
                                | 
            .col.mb-3
                a.card.btn.bg-white.px-2(href="/dashboard/app/stable-diffusion")
                    .card-body.row.justify-start.items-start.px-2
                        div.col-2.d-flex.align-items-center
                            i.fas.fa-image.mr-3.display-6
                        div.col-10
                            h5.card-title.fw-bold.text-start
                                |  画像生成 
                            p.card-text.text-start.text-muted
                                | 
    section.my-5
        .row.row-cols-1.row-cols-md-2.my-5
            .col
                h5.fw-bold
                    i.fas.fa-bell.me-2
                    | お知らせ
                if latestNews
                    .news-item.mt-3
                        .news-date.text-muted
                            | #{latestNews.date}
                        .news-content
                            | #{latestNews.content}
                else
                    p.text-muted.mt-3.px-3 お知らせはまだありません。

            .col 
                h5.fw-bold
                    i.fas.fa-cogs.me-2
                    | 設定・サポート
                .row.row-cols-1.row-cols-md-2.my-3
                    .col.my-1
                        a.btn.btn-primary.w-100(href="/user/setting") アカウント設定
                    .col.my-1
                        a.btn.btn-primary.w-100(href="#") 利用文字数
                    .col.my-1
                        a.btn.btn-outline-primary.w-100(href="#") 使い方
                    .col.my-1
                        a.btn.btn-outline-primary.w-100(href="#") お問い合わせ


    section.my-5
        .row
            .col
                h5.fw-bold メモ
                .row.row-cols-1.row-cols-md-3.my-3
                    .col
                        textarea.form-control(name="memo", placeholder="メモを入力してください")
                        button#memo.btn.btn-primary.w-100(type="submit") 新しいメモを保存する
                    if memos && memos.length > 0
                        each memo in memos
                            .col
                                .card(data-id=memo._id)
                                    .remove-memo.position-absolute(type="button" style="right: 10px;")
                                        i.fas.fa-times
                                    .card-body
                                        p=memo.content


    section.my-5 
        .row
            .col
                h5.fw-bold 作成したドキュメント
                if books && books.length > 0
                    .row.row-cols-1.row-cols-md-3.my-3
                        each book in books 
                            .col
                                a.text-dark(href=`/dashboard/app/openai/ebook/${book._id}`)
                                    .card.btn.bg-white
                                        .card-body
                                            h3.fw-normal.fs-6.text-capitalize=book.title
                                            p.text-capitalize=book.book_content[0].content.slice(0,50)
                                                | ... 
                else
                    .py-3.text-center
                        .mt-4.h-8.text-center.text-sm.text-muted
                            | 作成したドキュメントはまだありません


    section.my-5
        .row
            .col
                h5.fw-bold ブックマーク
                if !user.bookmarked
                    .py-3.text-center
                        .mt-4.h-8.text-center.text-sm.text-muted
                            | ブックマークはまだありません

    section.my-5
        .row
            .col
                h5.fw-bold お気に入りのテンプレート
                if !user.templateFavorited
                    .py-3.text-center
                        .mt-4.h-8.text-center.text-sm.text-muted
                            | お気に入りのテンプレートはありません
