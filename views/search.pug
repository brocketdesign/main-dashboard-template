extends dashboard

block dynamicContent
  label.form-label(for="grid") 1行あたりの要素数
  div.range
    input.form-range(type="range" id="grid-range" min="1" max="4" value="3")
  if scrapedData.length > 0 
    .masonry-container.row.custom-carousel-container
      each data in scrapedData.reverse()
        .mb-2.px-1.masonry-item.custom-carousel-item.grid-item(data-mode=mode, data-id=data.video_id, data-isdl=(data.filePath?"true":"false"))
          .card(class=`card-clickable-${mode}`, data-id=data.video_id)
            .card-body-over.position-absolute(style="inset:0;display: none;")
            .card-top.py-2.px-3.position-absolute
              .d-flex.justify-content-between
                  .delete-button.btn.btn-dark.border-white.border.hover.shadow(type="button" data-id=data.video_id style="display:none")
                      i.fas.fa-trash-alt
            img.card-img-top(type="button", style="object-fit:cover;height: 100%;" ,data-id=data.video_id, src=data.url || data.thumb || data.imageUrl, alt=data.title,data.imageUrl=data.imageUrl?data.imageUrl:undefined )
            .card-body.py-1.px-3.w-100.position-absolute.hover(style="bottom: 0;display:none")
              .d-flex.justify-content-between.tool-bar.py-2
                .download-button.btn.btn-dark.border-white.border(type="button", data-id=data.video_id, data-title=data.title)
                  i.fas.fa-download
                a.source.btn.btn-dark.border-white.border(target="_blank", href=data.source||data.link||data.webm||data.url)
                  i.fas.fa-link
                .info-button.btn.btn-dark.border-white.border(type="button" data-id=data.url)
                  i.fas.fa-info
                .summarize-button.btn.btn-dark.border-white.border(type="button", data-id=data.video_id)
                  i.fas.fa-plane
              p.card-title.text-white.bg-dark.border-white.border.p-3(style="display:none")= data.title
  else
    p ここには何もありません！
  if scrapedData.length > 0 
    .d-flex.justify-content-center.w-100.p-3
      button.btn.bg-outline-dark.border.load-more.load-more-previous(type="button")
        i.fas.fa-angle-left.me-3
        | 前へ
      span.px-3.btn.btn-white #{page}
      button.btn.bg-outline-dark.border.load-more.load-more-next(type="button")
        | 次へ
        i.fas.fa-angle-right.ms-3
  #slickModal.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered.modal-xl
      .modal-content.rounded-0(style="background:#000;")
        #slickCarousel.slick-carousel
        .position-absolute.d-flex.justify-content-end.py-3.w-100(style="z-index: 3;")
          #closeSlickModal.mx-3.text-white(type="button")
            i.fas.fa-times
        #slickCarousel-tool-bar.d-flex.flex-column.justify-content-center.position-absolute(style="z-index: 3;top:0;bottom: 0;")
          .slider-delete-button.p-3.text-white(type="button")
              i.fas.fa-trash-alt
          .download-button.p-3.text-white(type="button")
            i.fas.fa-download
          a.source.p-3.text-white(target="_blank" href="#")
              i.fas.fa-link
  style.
    #slickModal .modal-dialog {
      max-height: 100vh;
      display: inline;
      flex-direction: column;
      justify-content: center;
      border-radius:0;
    }
    #slickCarousel .slick-slide img {
      height: 100vh;
      object-fit: contain;
    }
    .slick-prev {
      left: 0;
      bottom: 0;
      top: 0;
      width: 50%;
      opacity: 0;
      position:absolute;
      z-index: 2;
    }
    .slick-next {
      right: 0;
      bottom: 0;
      top: 0;
      width: 50%;
      opacity: 0;
      position:absolute;
      z-index: 2;
    }
    .download-button .spinner-border{
      color:white !important;
    }
  script(src="/js/slider.js")