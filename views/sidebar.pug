          li
            a.list-group-item.list-group-item-action.p-3.ps-5.ripple(href='/dashboard/app/openai/chat/') 
              span.hide-text.ms-3 チャット
          li
            a.list-group-item.list-group-item-action.p-3.ps-5.ripple(href='/dashboard/app/openai/compare/') 
