#sidebarMenu.collapse.d-lg-block.sidebar.collapse.bg-white.position-fixed.h-100.col-md-3.col-lg-2.p-0.shadow(style="z-index:2;")
  .position-sticky
    .list-group.list-group-flush.mt-4
      li.list-group-item.list-group-item-action.py-2.ripple
        a(href="#" aria-current='true', data-bs-toggle='collapse', aria-expanded=false, data-bs-target='#contents-collapse', aria-controls='contents-collapse') 
          i.fas.fa-video.me-3
          | Video
        ul.list-unstyled.collapse#contents-collapse.pt-3(class=`${mode == 1 ? "show":"hide"}`)
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/1') Latest
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/1/history') History
      li.list-group-item.list-group-item-action.py-2.ripple
        a(href="#" aria-current='false', data-bs-toggle='collapse', aria-expanded='false', data-bs-target='#contents-collapse2', aria-controls='contents-collapse3') 
          i.fas.fa-image.me-3
          | Reddit
        ul.list-unstyled.collapse#contents-collapse2.pt-3(class=`${mode == 2 ? "show":"hide"}`)
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/2') Latest
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/2/history') History
      li.list-group-item.list-group-item-action.py-2.ripple
        a(href="#" aria-current='false', data-bs-toggle='collapse', aria-expanded='false', data-bs-target='#contents-collapse3', aria-controls='contents-collapse3') 
          i.fas.fa-image.me-3
          | Google Image
        ul.list-unstyled.collapse#contents-collapse3.pt-3(class=`${mode == 3 ? "show":"hide"}`)
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/3') Latest
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/3/history') History
      li.list-group-item.list-group-item-action.py-2.ripple
        a(href="#" aria-current='false', data-bs-toggle='collapse', aria-expanded='false', data-bs-target='#contents-collapse4', aria-controls='contents-collapse4') 
          i.fas.fa-mixcloud.me-3
          | Stable Diffusion
        ul.list-unstyled.collapse#contents-collapse4.pt-3(class=`${mode == 'stable-diffusion' ? "show":"hide"}`)
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/stable-diffusion') Generate
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/stable-diffusion/gallery') Gallery  
      li.list-group-item.list-group-item-action.py-2.ripple
        a(href="#" aria-current='false', data-bs-toggle='collapse', aria-expanded='false', data-bs-target='#contents-collapse5', aria-controls='contents-collapse4') 
          i.fas.fa-comments.me-3
          | ChatGPT
        ul.list-unstyled.collapse#contents-collapse5.pt-3(class=`${mode == 'openai' ? "show":"hide"}`)
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/openai/chat') Chat
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/openai/compare') Compare Text 
          li
            a.list-group-item.list-group-item-action.py-2.ps-5.ripple(href='/dashboard/app/openai/comparePDF') Compare PDF      
      li.list-group-item.list-group-item-action.py-2
        a.ripple.btn.text-white.d-flex.align-items-center.w-100.p-3(href='/payment/subscription' , class=user.subscriptionId?"bg-success":"bg-dark")
          i.fas.fa-dollar-sign.me-3
          | Subscription
      li.list-group-item.list-group-item-action.py-2.d-lg-none
        if user
          a(href="/user/setting") 
            i.fas.fa-cog.me-3
            | Setting
      li.list-group-item.list-group-item-action.py-2.d-lg-none
        if user
          a(href='#', onclick='logout()') 
            i.fas.fa-sign-out-alt.me-3
            | Logout
        else
          a(href='/user/login') 
            i.fas.fa-sign-in-alt.me-3
            | Login

    include footer
