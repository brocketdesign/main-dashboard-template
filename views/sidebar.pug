#sidebarMenu.bg-white.position-fixed.h-100.col-md-2.p-0.shadow(style="z-index:10;width:60px; overflow-y: auto; max-height: 94vh;display:none")
  .position-sticky
    .list-group.list-group-flush
      li#sidebarMenuToggle.list-group-item.list-group-item-action.p-3.ripple.toggler.align-items-center.d-none(type="button")
        i.fas.fa-bars
        .hide-text.mx-2
          | RAKUBUN
      li.list-group-item.list-group-item-action.p-3.ripple(data-bs-toggle="tooltip" title="ホーム")
        a(href="/dashboard/") 
          i.fas.fa-home
          span.hide-text.ms-3 ホーム
      li.list-group-item.list-group-item-action.p-3.ripple(data-bs-toggle="tooltip" title="文章生成")
        a(href="#" aria-current='false', data-bs-toggle='collapse', aria-expanded='false', data-bs-target='#contents-collapse5', aria-controls='contents-collapse4') 
          i.fas.fa-newspaper
          span.hide-text.ms-3 文章生成
        ul.list-unstyled.collapse#contents-collapse5.pt-3(class=`${mode == 'openai' ? "show":"hide"}`)
          li
            a.list-group-item.list-group-item-action.p-3.ps-5.ripple(href='/dashboard/app/openai/ebook/') Ebook、本
          li
            a.list-group-item.list-group-item-action.p-3.ps-5.ripple(href='/dashboard/app/openai/article/') 記事、ブログ
          li
